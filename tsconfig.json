{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": [
    "src/**/*", "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "example"
  ]
}
